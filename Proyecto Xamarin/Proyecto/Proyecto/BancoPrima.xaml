<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto.BancoPrima"
             NavigationPage.HasNavigationBar="False"
             >
    <ContentPage.Content>
        <StackLayout>

            <!--<Image Source="FondoAutoFastAlterno.png" Aspect="AspectFit" />-->

            <Image Grid.Column="0" Source="Autofast_gris.png" WidthRequest="240" HeightRequest="240" Margin="0,50,0,0"/>

            <!-- Picker for the amount of car press porcentage -->
            <Label Text="Seleción del Porcentaje de Prima" TextColor="OrangeRed" FontSize="25"/>
            <Grid ColumnDefinitions="2" RowDefinitions="1">
            <Picker Title="Procentaje de Prima" x:Name="porcentajePrima" >
                 <Picker.ItemsSource>
                     <x:Array Type="{x:Type x:String}">
                         <x:String>10%</x:String>
                         <x:String>15%</x:String>
                         <x:String>20%</x:String>
                     </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Button Text="Calcular prima" x:Name="btnCalcular" FontSize="12"/>
            </Grid>

            <Entry Text="Monto de la prima" IsEnabled="False"  x:Name="montoPrima"/>


            <!-- End of the picker for the amount of car press porcentage -->

            <!-- Picker for the bank and % of interest -->

            <Label Text="Seleción del Banco" TextColor="OrangeRed" FontSize="25"/>

            <Picker x:Name="Banco" Title="Bancos disponibles" HorizontalOptions="Center">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>BN</x:String>
                        <x:String>BCR</x:String>
                        <x:String>BAC</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Picker x:Name="plazos" Title="Plazos">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>5 (60 meses)</x:String>
                        <x:String>7 (84 meses)</x:String>
                        <x:String>8 (96 meses)</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Button Text="Calcular prima" x:Name="btnCalcularTasa" FontSize="12"/>
            <Entry Text="Tasa de intereses" IsEnabled="False" x:Name="EnTasa"/>
            <Entry Text="Cuota mensual" IsEnabled="False" x:Name="EnMontoMensual"/>
         </StackLayout>
    </ContentPage.Content>
</ContentPage>