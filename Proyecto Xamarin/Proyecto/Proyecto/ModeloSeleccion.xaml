<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto.ModeloSeleccion"
              BackgroundColor = "#ff5757"
             NavigationPage.HasNavigationBar="False">
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="#d9d9d9">
                <Image Grid.Column="0" Source="LogoAutoFast.png" WidthRequest="245" HeightRequest="245" Margin="0,0,0,0"/>
                <Label Text="ModeloCarro" FontSize="40" FontFamily="Arial" HorizontalTextAlignment="Center" TextColor="Goldenrod" x:Name="lblModelo"/>
                <Image Source="" WidthRequest="500" HeightRequest="500" Margin="0, 50, 0, 0" x:Name="imgGrande"/>

                    <Grid 
                 ColumnDefinitions="33.33*, 33.33*, 33.33*"
                 ColumnSpacing="8" 
                 HorizontalOptions="FillAndExpand">
                    <Button BackgroundColor="White" Grid.Column="0" HorizontalOptions="FillAndExpand"   x:Name="btnColor1"/>
                    <Button BackgroundColor="White" Grid.Column="1" HorizontalOptions="FillAndExpand"   x:Name="btnColor2"/>
                    <Button BackgroundColor="White" Grid.Column="2" HorizontalOptions="FillAndExpand"   x:Name="btnColor3"/>
                
                </Grid>
                <Label x:Name="Pruebacolores"/>
                <Button Text="Continuar a pagar" Margin="0,60,0,0" BackgroundColor="#ff5757" HeightRequest="50" TextColor="White" x:Name="btnContinuePay"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>