<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto.ModeloSeleccion"
              BackgroundColor = "#ff5757">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#d9d9d9">
            <Image Grid.Column="0" Source="LogoAutoFast.png" WidthRequest="245" HeightRequest="245" Margin="0,50,0,0"/>
            <Label Text="ModeloCarro" FontSize="40" FontFamily="Arial" HorizontalTextAlignment="Center" TextColor="Goldenrod" x:Name="lblModelo"/>
            <Image Source="" x:Name="imgGrande"/>

                <Grid 
             ColumnDefinitions="25, 25, 25, 25"
             ColumnSpacing="8" 
             HorizontalOptions="FillAndExpand">
                <Button BackgroundColor="White" Grid.Column="0" HorizontalOptions="FillAndExpand"  ImageSource="" x:Name="btnColor1"/>
                <Button BackgroundColor="White" Grid.Column="1" HorizontalOptions="FillAndExpand" ImageSource=""  x:Name="btnColor2"/>
                <Button BackgroundColor="White" Grid.Column="2" HorizontalOptions="FillAndExpand" ImageSource=""  x:Name="btnColor3"/>
                <Button BackgroundColor="White" Grid.Column="3" HorizontalOptions="FillAndExpand" ImageSource=""  x:Name="btnColor4"/>
            </Grid>



        </StackLayout>
    </ContentPage.Content>
</ContentPage>